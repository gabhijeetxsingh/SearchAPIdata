vars[key] = value;
});
return vars;
}
if(getUrlVars()["searchstring"]==''){
    console.log('nothing');
    document.getElementById("id").value='';
}
else{
document.getElementById("id").value=getUrlVars()["searchstring"];
console.log('something');
}
console.log(getUrlVars()["searchstring"]);
